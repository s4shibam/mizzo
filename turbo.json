{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "tasks": {
    "start": {
      "dependsOn": ["^build", "build"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": [],
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**", ".next/**", "!.next/cache/**"]
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    }
  }
}
