{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    "allowImportingTsExtensions": true,

    "allowJs": true,

    "noEmit": true,
    "incremental": true,

    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
