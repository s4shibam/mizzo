{
  "extends": "@mizzo/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": ".dist",
    "baseUrl": "./",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", ".dist"]
}
